<div id="card">
  <% @deck.first.cards.each do |card| %>
  <div id="front">
    <p>card.front</p>
  </div>

  <div id="back" hidden>
    <p>card.back</p>
  </div>

  <div id="input">
    <input type="submit" value="show back">

    <div id="feedback" hidden>
      <input type="submit" value="bad">
      <input type="submit" value="ok">
      <input type="submit" value="good">
    </div>
  <% end %>

